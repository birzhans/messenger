<%= form_for [@chat, Message.new] do |f| %>
  <div class="d-flex">
    <div class="m-1 input">
      <%= f.text_area :body, class: 'form-control border-none p-2' %>
    </div>

    <div class="m-1 button">
      <%= button_tag type: "submit", class: "btn btn-primary" do %>
        <i class="bi bi-send"></i>
      <% end %>
    </div>
  </div>
<% end %>
